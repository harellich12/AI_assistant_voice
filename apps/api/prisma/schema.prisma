generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id              String   @id @default(uuid())
  userId          String
  title           String
  description     String?
  priority        String
  dueAt           DateTime?
  reminderAt      DateTime?
  tags            String[]
  idempotencyKey  String?  @unique
  createdAt       DateTime @default(now())
}

model ActionAudit {
  id         String   @id @default(uuid())
  userId     String
  actor      String
  actionType String
  status     String
  targetId   String?
  requestId  String
  createdAt  DateTime @default(now())
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  type      String
  title     String
  payload   Json
  createdAt DateTime @default(now())
}
